<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.HomeFragment" >

    <data>
        <variable
            name="viewModel"
            type="com.example.techpowerhour.ui.home.HomeViewModel" />
    </data>

    <FrameLayout android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/company_points_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/company_points_layout_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_company_points_statistics_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.045"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <RelativeLayout
                    android:id="@+id/company_points_layout_today"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:minHeight="64dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/company_points_layout_header"
                    app:layout_constraintVertical_bias="0.0"
                    tools:layout_editor_absoluteX="0dp">

                    <TextView
                        android:id="@+id/company_points_layout_today_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="16dp"
                        android:text="@string/home_company_statistics_title_today"
                        android:textAppearance="?attr/textAppearanceSubtitle1" />

                    <TextView
                        android:id="@+id/company_points_layout_today_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/company_points_layout_today_title"
                        android:layout_gravity="center_vertical"
                        android:maxLines="2"
                        android:paddingHorizontal="16dp"
                        android:text="150 points recorded today"
                        android:textAppearance="?attr/textAppearanceBody2" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/company_points_layout_week"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/company_points_layout_today"
                    android:background="?attr/selectableItemBackground"
                    android:minHeight="64dp"
                    app:layout_constraintTop_toBottomOf="@+id/company_points_layout_today">

                    <TextView
                        android:id="@+id/company_points_layout_week_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="16dp"
                        android:text="@string/home_company_statistics_title_week"
                        android:textAppearance="?attr/textAppearanceSubtitle1" />

                    <TextView
                        android:id="@+id/company_points_layout_week_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/company_points_layout_week_title"
                        android:layout_gravity="center_vertical"
                        android:maxLines="2"
                        android:paddingHorizontal="16dp"
                        android:text="150 points recorded this week"
                        android:textAppearance="?attr/textAppearanceBody2" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/company_points_layout_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/company_points_layout_week"
                    android:background="?attr/selectableItemBackground"
                    android:minHeight="64dp"
                    app:layout_constraintTop_toBottomOf="@+id/company_points_layout_week">

                    <TextView
                        android:id="@+id/company_points_layout_month_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="16dp"
                        android:text="@string/home_company_statistics_title_month"
                        android:textAppearance="?attr/textAppearanceSubtitle1" />

                    <TextView
                        android:id="@+id/company_points_layout_month_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/company_points_layout_month_title"
                        android:layout_gravity="center_vertical"
                        android:maxLines="2"
                        android:paddingHorizontal="16dp"
                        android:text="150 points recorded this month"
                        android:textAppearance="?attr/textAppearanceBody2" />

                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--            BT Power Hour Statistics-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/company_power_hours_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/company_power_hours_layout_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_company_power_hour_statistics_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.045"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RelativeLayout
                    android:id="@+id/company_power_hours_layout_today"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:minHeight="64dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/company_power_hours_layout_header"
                    app:layout_constraintVertical_bias="0.0"
                    tools:layout_editor_absoluteX="0dp">

                    <TextView
                        android:id="@+id/company_power_hours_layout_today_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="16dp"
                        android:text="@string/home_company_statistics_title_today"
                        android:textAppearance="?attr/textAppearanceSubtitle1" />

                    <TextView
                        android:id="@+id/company_power_hours_layout_today_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/company_power_hours_layout_today_title"
                        android:layout_gravity="center_vertical"
                        android:maxLines="2"
                        android:paddingHorizontal="16dp"
                        android:text="150 points recorded today"
                        android:textAppearance="?attr/textAppearanceBody2" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/company_power_hours_layout_week"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/company_power_hours_layout_today"
                    android:background="?attr/selectableItemBackground"
                    android:minHeight="64dp"
                    app:layout_constraintTop_toBottomOf="@+id/company_power_hours_layout_today">

                    <TextView
                        android:id="@+id/company_power_hours_layout_week_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="16dp"
                        android:text="@string/home_company_statistics_title_week"
                        android:textAppearance="?attr/textAppearanceSubtitle1" />

                    <TextView
                        android:id="@+id/company_power_hours_layout_week_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/company_power_hours_layout_week_title"
                        android:layout_gravity="center_vertical"
                        android:maxLines="2"
                        android:paddingHorizontal="16dp"
                        android:text="150 points recorded this week"
                        android:textAppearance="?attr/textAppearanceBody2" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/company_power_hours_layout_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/company_power_hours_layout_week"
                    android:background="?attr/selectableItemBackground"
                    android:minHeight="64dp"
                    app:layout_constraintTop_toBottomOf="@+id/company_power_hours_layout_week">

                    <TextView
                        android:id="@+id/company_power_hours_layout_month_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="16dp"
                        android:text="@string/home_company_statistics_title_month"
                        android:textAppearance="?attr/textAppearanceSubtitle1" />

                    <TextView
                        android:id="@+id/company_power_hours_layout_month_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/company_power_hours_layout_month_title"
                        android:layout_gravity="center_vertical"
                        android:maxLines="2"
                        android:paddingHorizontal="16dp"
                        android:text="150 points recorded this month"
                        android:textAppearance="?attr/textAppearanceBody2" />

                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:contentDescription="@string/fab_add_content"
            android:layout_margin="16dp"
            android:clickable="true"
            android:src="@android:drawable/ic_input_add" />

    </FrameLayout>
</layout>